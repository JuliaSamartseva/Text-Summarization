{
  "manifest_version": 3,
  "name": "FindText",
  "version": "1",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["https://us-central1-query-summarization.cloudfunctions.net/function-3"],
  "description": "Highlights summarized text that is related to the given query",
  "icons": {"16": "images/icon16.png",
            "64": "images/icon64.png"},
  "action": {
   "default_icon": "images/tab-icon.png",
   "default_title": "Highlight text related to the given query",
   "default_popup": "html/popup.html"
  }
}